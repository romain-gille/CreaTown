<div class="container sticky_footer">
  <h1><%= @creation.name %></h1>
  <div class="row">
    <div class="col-12 col-lg-8 border showpage-image-container">
      <img src="<%= @creation.photos.first.url %>">
    </div>

    <div class="col-12 col-lg-4 border">
      <p>This is the description <%= @creation.description %></p>
      <p>This is the category <%= @creation.category %></p>
      <p>Created on <%= @creation.date.strftime("%b %d, %Y") %></p>
      <%# <%= render :partial => 'like', locals: { creation: @creation, like: @like } %>
    </div>
  </div>
</div>
