<div class="categories-container container-fluid d-flex justify-content-center flex-wrap">
  <ul class= "d-flex justify-content-center my-3 container ">
    <% @categories.each do |cat| %>
      <%= form_tag main_path, method: :get do %>
        <%= hidden_field_tag :query,
              cat
          %>
        <%= button_tag(type: "submit", class: "btn btn-lg") do %>
          <i class='<%= cat %>'></i>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
